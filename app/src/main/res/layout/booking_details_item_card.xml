<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/combo_text_blue"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_date_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="05" />

                <TextView
                    android:id="@+id/tv_date_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="Apr" />


                <TextView
                    android:id="@+id/tv_date_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="2023" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/combo_text_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_booking_details_place_time_slots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:text="@string/selected_time_slot" />



                </LinearLayout>

                </androidx.cardview.widget.CardView>


                   <androidx.cardview.widget.CardView
                       android:id="@+id/cv_booking_details_location"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:cardCornerRadius="10dp"
                       android:layout_marginTop="6dp"
                       app:cardBackgroundColor="@color/combo_text_blue">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:padding="2dp"
                           android:orientation="horizontal">

                           <TextView
                               android:id="@+id/tv_latitude_longitude_hide"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:background="@color/white"
                               android:layout_margin="6dp"
                               android:padding="2dp"
                               android:visibility="gone"
                               android:textStyle="bold"
                               android:textSize="16sp"
                               android:textColor="@color/combo_text_blue"
                               android:text="" />

                           <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:textColor="@color/white"
                        android:drawableTint="@color/red"
                        android:drawableRight="@drawable/icon_location_24"
                        android:text="@string/place_address" />

                       </LinearLayout>

                       <TextView
                           android:id="@+id/tv_booking_details_place_address"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:background="@color/white"
                           android:layout_margin="6dp"
                           android:padding="2dp"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           android:textColor="@color/combo_text_blue"
                           android:text="@string/enter_address" />


                       </LinearLayout>

                   </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_booking_details_staff_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="4dp"
                    app:cardBackgroundColor="@color/combo_text_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:padding="2dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:textColor="@color/white"
                                android:drawableTint="@color/spring_green"
                                android:drawableRight="@drawable/icon_phone_24"
                                android:text="@string/contact_details" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_booking_details_staff_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:layout_margin="6dp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/combo_text_blue"
                            android:text="@string/enter_ground_staff_number" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>